{
  "name": "cms-backend-api",
  "description": "Simple Content Management System API with versioning",
  "version": "1.0.0",
  "author": "Jacob Shalabi",
  "scripts": {
    "dev": "nodemon",
    "start": "node build/server.js",
    "build": "tsc -p tsconfig.json && tsc-alias -s -p tsconfig.json",
    "migrate": "drizzle-kit generate:sqlite --out src/db/migrations --schema src/db/schema.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage=true"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/better-sqlite3": "^7.6.4",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.6.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "better-sqlite3": "^8.6.0",
    "drizzle-kit": "^0.19.13",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "winston": "^3.10.0",
    "zod": "^3.22.2",
    "zod-express-middleware": "^1.4.0"
  }
}
